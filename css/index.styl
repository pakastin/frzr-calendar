
@import 'nib'

*
  margin: 0
  padding: 0

body
  background-color: #f9f9f9
  font-family: 'Roboto Mono', monospace
  font-size: .875rem
  padding: 1rem
  user-select: none
  color: #222

a
  text-decoration: none

  &:hover
    text-decoration: underline

.calendar
  display: inline-block
  vertical-align: top
  margin: .25rem
  padding: .75rem
  background-color: #fff
  box-shadow: 0 1px 2px rgba(0, 0, 0, .25)

.calendar thead
  text-align: center
  font-size: .75rem
  color: #888

.calendar tbody
  text-align: right

.month
  text-align: center
  margin-bottom: .5rem
  font-size: 1rem
  font-weight: 300
  color: #2196f3
  padding: .375rem

.month .previous, .month .next
  cursor: pointer
  margin: -.375rem
  padding: .375rem
  color: #888

  &:hover
    background-color: #2196f3
    color: #fff
    text-decoration: none

.month .previous
  float: left

.month .next
  float: right

.day
  padding: .375rem

.day.before, .day.after
  color: #ccc

.day:not(.before):not(.after)
  cursor: pointer

  &:hover
    background-color: #2196f3
    color: #fff
